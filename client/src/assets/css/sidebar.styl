.sidebar
  position fixed
  top 8px
  left 0
  .header
    background-color white
    margin-top 20px
    position relative
    margin-left 10px
    height 40px
    width 40px
    transition all .5s ease-in
    overflow hidden
    &:hover, &.active
      height 150px
      width 100%
      .button
        top 120px
        border 5px solid
      .rainbowBar
        height 120px
    .button
      position absolute
      top 0
      left 0
      width 0
      border-radius 50%
      border 20px solid
      cursor pointer
      border-color violet indigo blue green
      transition all .5s ease-in
    .rainbowBar
      position absolute
      height 0
      top 15px
      left 0
      width 10px
      overflow hidden
      transition all .5s ease-in
      > div
        width 100%
        height 30px
    .content
      margin-top 50px
      margin-left 25px
      .name
        font-size 32px
        color #666
        font-weight 100
      .social
        color blue
      .github
        color link-green
        margin-right 10px
      .facebook
        color link-blue
        margin-left 5px
      .email
        color indigo
  .nav
    margin-top 50px
    margin-left 10px
  