global-reset()
normalize-css()

body
  border 0
  margin 0
  
li
  list-style none

a
  text-decoration none

h1, .entry-content
  text-align center
  
.violet
  background violet
.indigo
  background indigo
.blue
  background blue
.green
  background green

.header-mask
  overflow hidden
  position fixed
  top 0
  width 100%
  height 8px
  > div
    height 8px
    width 25%
    float left

main
  margin 0 auto
  width 80%
  max-width 800px
  
article
  border-bottom 1px dotted #aaa
  margin-top 40px
  .header, .footer
    text-align center
    margin-bottom 30px
  h2
    margin 10px 0
    font-size 36px
    color title
    a
      font-size 36px
      color title
      transition all .3s ease-out
      &:hover
        color topmenu
  .date
    display inline-block
    padding 5px 20px
    margin 0
    font-family Meta
    font-size 12px
    font-weight 300
    border-top 1px solid #ddd
    border-bottom 1px solid #ddd
    position relative
    &:before, &:after
      content ' '
      position absolute
      width 10px
      height 1px
      background-color #ddd
      top 14px
    &:before
      left 0
    &:after
      right 0
  .readmore
    padding 8px 15px
    color white
    font-family 'Hiragino Sans GB'
    font-weight 600
    &:after
      content " Â»"
      display inline-block
      width 0
      height 100%
      line-height 15px
      vertical-align middle
      overflow hidden
      transition all .15s ease-in
    &:nth-child(2n+1)
      background-color violet
    &:nth-child(2n)
      background-color indigo
    &:hover
      background-color blue
      &:after
        width 10px
        padding-left 5px
    
      